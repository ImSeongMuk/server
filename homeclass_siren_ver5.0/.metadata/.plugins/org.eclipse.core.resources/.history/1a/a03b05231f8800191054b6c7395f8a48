<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="dealim.cs.siren.mappers.testMapper">

	<!-- 
        mybatis-config.xml의 typeAlias에 등록해두지 않았다면 
        <select id="selectMember" resultType="com.example.dto.MemberVO" >
            SELECT ID, PW ,NAME FROM TEST
        </select>
        
        이렇게 해야 한다.
    -->
	<select id='user_db' resultType="User_db">
		 select * from user_db;
	</select>
	
	<insert id="user_insert">
	     insert into user_db(email,name,tel,addr,user_password,medicament,blood_type,date_of_birth,user_weight,oft_hospital,disease_name)
	     values(#{email},#{name},#{tel},#{addr},#{user_password},#{medicament},#{blood_type},#{date_of_birth},#{user_weight},#{oft_hospital},#{disease_name});
	</insert>
	
	<select id='user_login' resultType="User_db">
		 select * from user_db where email = #{email} and user_password = #{user_password};
	</select>
	
	<select id='userinfo' resultType="User_db">
		 select * from user_db where email = #{email};
	</select>
</mapper>